<UserControl x:Class="Galaxy_Swapper_v2.Workspace.Usercontrols.CosmeticsView"
             Height="600"
             Width="985"
             Loaded="CosmeticsView_Loaded"
             >
    <Border Background="#090B0E" CornerRadius="0,0,10,0">
        <Grid>
            <ScrollViewer Name="Frontend_Viewer" VerticalScrollBarVisibility="Auto">
                <WrapPanel Name="Frontend_Items"/>
            </ScrollViewer>
            <ScrollViewer Name="Option_Viewer" VerticalScrollBarVisibility="Auto" Visibility="Hidden">
                <WrapPanel Name="Option_Items"/>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>